{
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters",
		"Other"
	],
	"contributes": {
		"commands": [
			{
				"category": "Tangram",
				"command": "tangram.restartLanguageServer",
				"title": "Restart Language Server"
			}
		],
		"configuration": {
			"properties": {
				"tangram.enable": {
					"default": true,
					"description": "Enable the Tangram extension.",
					"scope": "window",
					"type": "boolean"
				},
				"tangram.path": {
					"default": "tg",
					"description": "Specify the path to the `tg` binary.",
					"scope": "window",
					"type": "string"
				},
				"tangram.trace.server": {
					"default": "off",
					"description": "Enable tracing for the Tangram Langauge Server.",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"scope": "window",
					"type": "string"
				}
			},
			"title": "Tangram"
		},
		"configurationDefaults": {
			"[tangram-typescript]": {
				"editor.detectIndentation": false,
				"editor.insertSpaces": false,
				"editor.tabSize": 2
			}
		},
		"grammars": [
			{
				"embeddedLanguages": {
					"source.ts": "typescript"
				},
				"language": "tangram-typescript",
				"path": "./tangram-typescript.tmLanguage.json",
				"scopeName": "source.tg"
			}
		],
		"languages": [
			{
				"aliases": [
					"Tangram TypeScript"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".tg"
				],
				"id": "tangram-typescript"
			}
		]
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.2"
	},
	"description": "Tangram integration and language support for Visual Studio Code.",
	"devDependencies": {
		"@types/node": "^18.11.5",
		"@types/vscode": "^1.75.0",
		"@vscode/vsce": "^2.17.0",
		"esbuild": "^0.17.10"
	},
	"displayName": "Tangram",
	"engines": {
		"vscode": "^1.75.0"
	},
	"icon": "tangram.png",
	"license": "MIT",
	"main": "./extension.js",
	"name": "tangram",
	"publisher": "tangramdotdev",
	"repository": {
		"url": "https://github.com/tangramdotdev/tangram"
	},
	"scripts": {
		"build": "esbuild --bundle --outfile=extension.js --format=cjs --sourcemap --platform=node --external:vscode src/extension.ts",
		"check": "tsc && eslint && prettier --check .",
		"package": "vsce package --no-dependencies --no-update-package-json --no-git-tag-version",
		"vscode:prepublish": "npm run build"
	},
	"version": "0.0.0"
}
